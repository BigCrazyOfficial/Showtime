{
  "model": {
    "type": "minecraft:select",
    "property": "minecraft:display_context",
    "cases": [
      {
        "when": "ground",
        "model": {
          "type": "minecraft:model",
          "model": "showtime:item/showstopper_gui"
        }
      },
      {
        "when": "head",
        "model": {
          "type": "minecraft:model",
          "model": "showtime:item/showstopper_gui",
          "tints": []
        }
      },
      {
        "when": "gui",
        "model": {
          "type": "minecraft:model",
          "model": "showtime:item/showstopper_gui"
        }
      },
      {
        "when": "fixed",
        "model": {
          "type": "minecraft:model",
          "model": "showtime:item/showstopper_gui"
        }
      },
      {
        "when": "firstperson_righthand",
        "model": {
          "type": "minecraft:model",
          "model": "showtime:item/showstopper_hand"
        }
      },
      {
        "when": "firstperson_lefthand",
        "model": {
          "type": "minecraft:model",
          "model": "showtime:item/showstopper_hand"
        }
      },
      {
        "when": "thirdperson_righthand",
        "model": {
          "type": "minecraft:model",
          "model": "showtime:item/showstopper_hand"
        }
      },
      {
        "when": "none",
        "model": {
          "type": "minecraft:bundle/selected_item"
        }
      },
      {
        "when": "thirdperson_lefthand",
        "model": {
          "type": "minecraft:model",
          "model": "showtime:item/showstopper_hand"
        }
      }
    ],
    "fallback": {
      "type": "minecraft:model",
      "model": "showtime:item/showstopper_hand"
    }
  },
  "hand_animation_on_swap": true,
  "oversized_in_gui": false
}